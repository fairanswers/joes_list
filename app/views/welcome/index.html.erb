<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Categories in For Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Category', new_category_path %>
<% end %>
